<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/conference_fragment_coordinatorlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44ffffff"
    android:visibility="visible"
    tools:context="com.ncr.medicalconferencetracker.Fragments.DoctorFragments.InviteFragment">

    <LinearLayout
        android:id="@+id/invite_fragment_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/invite_fragment_swiperefresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/invite_fragment_recyclerview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:visibility="visible" />

        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>

